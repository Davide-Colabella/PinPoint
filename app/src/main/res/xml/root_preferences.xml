<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Localizzazione">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="localization_preference"
            app:title="Abilita la posizione" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Tema">
        <ListPreference
            android:defaultValue="2"
            android:entries="@array/dark_mode_entries"
            android:entryValues="@array/dark_mode_values"
            android:key="list_theme_preference"
            app:useSimpleSummaryProvider="true"
            android:title="Dark mode" />

    </PreferenceCategory>

</PreferenceScreen>